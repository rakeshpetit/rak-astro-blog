---
import Header from "../../components/header.astro";
import Footer from "../../components/footer.astro";
import "../../styles/tailwind.css";

import { getCollection } from "astro:content";

const posts = await getCollection("posts");
---

<html lang="en" class="h-full">
  <Header />
  <body class="h-full">
    <main class="relative min-h-almost py-8 bg-gradient-to-t from-stone-100">
      <ul>
        {
          posts.map((post) => {
            return (
              <li class="mb-4">
                <div class="flex justify-center">
                  <div class="w-2/3 rounded-lg bg-white p-6 px-12 shadow-lg">
                    <h2 class="mb-2 text-xl font-extrabold leading-tight text-cyan-600 lg:text-3xl">
                      <a href={`/posts/${post.slug}`}>{post.data.title}</a>
                    </h2>
                  </div>
                </div>
              </li>
            );
          })
        }
      </ul>
    </main>
    <Footer />
  </body>
</html>
