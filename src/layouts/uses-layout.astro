---
import Header from "../components/header.astro";
import Footer from "../components/footer.astro";
import type { MarkdownLayoutProps } from "astro";
import "../styles/tailwind.css";

type Props = MarkdownLayoutProps<{
  title: string;
  author: string;
  date: string;
  image: string;
}>;

const { frontmatter } = Astro.props;
---

<html lang="en" class="h-full">
  <Header title={frontmatter.title} />
  <body class="h-full">
    <div class="items-center justify-center bg-sky-50">
      <main class="relative min-h-almost py-8">
        <section>
          <h1
            class="my-4 flex justify-center text-4xl font-bold tracking-tight"
          >
            {frontmatter.title}
          </h1>
          <div class="flex flex-wrap justify-center">
            <img
              class="h-auto w-5/6 rounded-full xl:w-3/5"
              alt="Uses"
              src={frontmatter.image}
            />
          </div>
          <div class="flex flex-wrap justify-center">
            <article
              class="prose prose-blue prose-headings:font-light prose-h1:mt-8 prose-li:font-mono"
            >
              <slot />
            </article>
          </div>
          <div class="flex flex-0 pt-4 pb-2 pr-2 justify-end">
            <p class="text-gray-400">Updated on: {frontmatter.date}</p>
          </div>
        </section>
        <Footer />
      </main>
    </div>
  </body>
</html>
